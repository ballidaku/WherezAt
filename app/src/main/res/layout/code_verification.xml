<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greybackground"
    android:gravity="center">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="A text message has been sent to your phone."
                android:textAlignment="center"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="with 4 digit code."
                android:textAlignment="center"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Please enter the code below."
                android:textAlignment="center"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtCode1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_edittexts"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="8dip"
                    android:textColor="#f24e4e"/>

                <EditText
                    android:id="@+id/txtCode2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_edittexts"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="8dip"
                    android:textColor="#f24e4e"/>

                <EditText
                    android:id="@+id/txtCode3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_edittexts"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="8dip"
                    android:textColor="#f24e4e"/>

                <EditText
                    android:id="@+id/txtCode4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_edittexts"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="8dip"
                    android:textColor="#f24e4e"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#4d4d4d"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Continue"
                android:textAllCaps="false"
                android:textColor="#f24e4e"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>